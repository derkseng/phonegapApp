<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.difd462.studentdirectory"
        versionCode = "10"
        version     = "1.1.0">
 
    <name>Sudent Directory</name>
 
    <description>
        A simple student directory application
    </description>
 
    <author href="http://www.gerryderksen.com" email="derkseng@winthrop.edu">
        Gerry Derksen
    </author>
    <plugin name="cordova-plugin-camera" source="npm"  />
        <gap:plugin name="cordova-plugin-camera" source="npm" >
        <variable name="CAMERA_USAGE_DESCRIPTION" value="{id} camera use" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="{id}  photo use" />
        </gap:plugin>

        <gap:plugin name="cordova-plugin-geolocation" source="npm"  >
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="{id} Location use." />
        </gap:plugin>
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
 
</widget>
